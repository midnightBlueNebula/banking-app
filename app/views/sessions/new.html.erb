<h1>Login</h1>

<%= form_for(:session, url: "/login"), remote: true do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :name, "Remember me" %>
    <%= f.check_box :remember %>

    <%= f.submit :login %>
<% end %>

<p>Not registered yet? <%= link_to 'register here', "/user/register" %>.</p>
